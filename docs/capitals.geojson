<script>
fetch('capitals.geojson')
  .then(res => res.json())
  .then(data => {
    L.geoJSON(data, {
      onEachFeature: (feature, layer) => {
        layer.bindPopup(`<strong>${feature.properties.name}</strong>`);
      }
    }).addTo(markers);
    map.fitBounds(markers.getBounds(), { padding: [50, 50] });
  });
